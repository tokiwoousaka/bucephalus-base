name:                bucephalus-base
version:             0.1.0.0
synopsis:            Initial project template from stack
description:         Please see README.md
homepage:            http://github.com/githubuser/bucephalus-base#readme
license:             BSD3
license-file:        LICENSE
author:              Tokiwo Ousaka
maintainer:          example@example.com
copyright:           2010 Author Here
category:            Web
build-type:          Simple
-- extra-source-files:
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     Game.Bucephalus
                     , Game.Bucephalus.Object
                     , Game.Bucephalus.Figure
  build-depends:       base >= 4.7 && < 5
                     , containers
                     , mtl
  default-language:    Haskell2010

executable bucephalus-base-check
  hs-source-dirs:      app
  other-modules:       Control.Monad.Operational
                     , CheckLogic
  main-is:             GHC_Check.hs
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  build-depends:       base
                     , bucephalus-base
  default-language:    Haskell2010

test-suite bucephalus-base-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       base
                     , bucephalus-base
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/githubuser/bucephalus-base
